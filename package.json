{
  "name": "montty-zoom",
  "version": "1.0.0",
  "description": "Video call application like Zoom with React web and Flutter mobile",
  "main": "server/index.js",
  "scripts": {
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "server": "nodemon server/index.js",
    "client": "cd web-app && npm start",
    "build": "cd web-app && npm run build",
    "build:production": "npm install && cd web-app && npm install && npm run build",
    "start": "node server/index.js",
    "install-all": "npm install && cd web-app && npm install",
    "test": "jest --testPathIgnorePatterns=node_modules",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:supabase": "node test-supabase.js",
    "lint": "eslint server/ --ext .js",
    "lint:fix": "eslint server/ --ext .js --fix",
    "verify-build": "./verify-build.sh"
  },
  "keywords": [
    "video-call",
    "webrtc",
    "zoom",
    "video-conferencing"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@supabase/supabase-js": "^2.79.0",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^8.2.1",
    "googleapis": "^164.1.0",
    "ical-generator": "^10.0.0",
    "multer": "^1.4.5-lts.1",
    "node-ical": "^0.22.1",
    "nodemailer": "^6.10.1",
    "pg": "^8.11.3",
    "qrcode": "^1.5.3",
    "socket.io": "^4.6.1",
    "uuid": "^9.0.0",
    "winston": "^3.18.3"
  },
  "devDependencies": {
    "concurrently": "^8.2.0",
    "eslint": "^8.50.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.1",
    "supertest": "^6.3.3"
  }
}
